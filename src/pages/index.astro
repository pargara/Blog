---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header title={SITE_TITLE} />
		<main>
			<div class="mx-auto">
				<div class="container mx-auto grid grid-cols-2 mb-30">
					<div>
						<h1 class="font-bold text-6xl mt-20">Hi! I'm Sebastian Guevara and I'm Ruby On Rails developer</h1>
						<p class="text-lg mt-9">Mostly focused on Back-End development, but also I can take the role of a Front-End developer, 
							and always I'm looking to create as most value as I can</p>
					</div>
					<img id="" src="/favicon.PNG" ></img>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
body{
	margin: auto;
}
</style>
